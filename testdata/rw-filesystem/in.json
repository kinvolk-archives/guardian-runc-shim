{
  "ociVersion": "1.0.0",
  "mounts": [
    {
      "destination": "/sys",
      "type": "sysfs",
      "source": "sysfs",
      "options": [
        "nosuid",
        "noexec",
        "nodev",
        "ro"
      ]
    },
    {
      "destination": "/dev/shm",
      "type": "tmpfs",
      "source": "tmpfs",
      "options": [
        "rw",
        "nodev",
        "relatime"
      ]
    }
  ]
}
